<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #272727;
            color: #ffffff;
        }

        .sidebar {
            margin: 0;
            padding: 0;
            width: 200px;
            background-color: #1f1f1f;
            position: fixed;
            height: 100%;
            overflow: auto;
        }

        .sidebar a {
            display: block;
            color: #ffffff;
            padding: 16px;
            text-decoration: none;
        }

        .sidebar a.active {
            background-color: #04AA6D;
            color: white;
        }

        .sidebar a:hover:not(.active) {
            background-color: #026e47;
            color: white;
        }

        div.content {
            margin-left: 200px;
            padding: 1px 16px;
            height: 1000px;
        }

        .card {
            background-color: #2b2b2b;
            color: #ffffff;
            border: none;
        }

        .btn-primary {
            background-color: #343a40;
            border-color: #343a40;
        }

        .btn-primary:hover {
            background-color: #575757;
            border-color: #575757;
        }

        table {
            background-color: #2b2b2b;
            color: #ffffff;
            width: 100%;
            margin-bottom: 1rem;
        }

        th {
            background-color: #343a40;
            color: #ffffff;
        }

        td {
            background-color: #2b2b2b;
            color: #ffffff;
        }

        table tr:hover {
            background-color: #3a3a3a;
        }

        table th,
        table td {
            border: 1px solid #444;
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #4d4d4d;
        }

        @media screen and (max-width: 700px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .sidebar a {
                float: left;
            }

            div.content {
                margin-left: 0;
            }
        }

        @media screen and (max-width: 400px) {
            .sidebar a {
                text-align: center;
                float: none;
            }
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <!-- The sidebar -->
        <div class="sidebar">
            <a href="/admin">Dashboard</a>
            <a href="/admin/eventManagement">Event Management</a>
            <a class="active" href="/admin/memberManagement">Member Management</a>
            <a href="/userFeedbacks">User Feedbacks</a>
        </div>

        <div class="content">
            <div class="container">
                <div class="input-group mt-3">
                    <a class="btn btn-primary" href="/admin/addMember">Add Member</a>
                </div>
                <table class="table-dark mt-4">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Designation</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each members}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.designation}}</td>
                            <td><button class="btn btn-primary view-details-btn" data-id="{{this._id}}">View Details</button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="memberModal" tabindex="-1" aria-labelledby="memberModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: #2b2b2b; color: #ffffff;">
                <div class="modal-header">
                    <h5 class="modal-title" id="memberModalLabel">Member Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img id="memberImage" src="" alt="Member Image" class="img-fluid mb-3" style="max-height: 200px;">
                    <p><strong>Name:</strong> <span id="memberName"></span></p>
                    <p><strong>Designation:</strong> <span id="memberDesignation"></span></p>
                    <p><strong>Instagram:</strong> <a href="#" id="memberInstagram" target="_blank">View Profile</a></p>
                    <p><strong>LinkedIn:</strong> <a href="#" id="memberLinkedin" target="_blank">View Profile</a></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.view-details-btn').forEach(button => {
            button.addEventListener('click', function () {
                const memberId = this.getAttribute('data-id');

                // Fetch member data based on the member ID
                fetch(`/admin/memberManagement/${memberId}/details`)
                    .then(response => response.json())
                    .then(data => {
                        // Populate the modal with the member details
                        document.getElementById('memberName').textContent = data.name;
                        document.getElementById('memberDesignation').textContent = data.designation;
                        document.getElementById('memberInstagram').href = data.instagramLink || '#';
                        document.getElementById('memberLinkedin').href = data.linkedinLink || '#';
                        document.getElementById('memberImage').src = `data:${data.image.contentType};base64,${data.image.data}`;

                        // Show the modal
                        new bootstrap.Modal(document.getElementById('memberModal')).show();
                    })
                    .catch(error => console.error('Error:', error));
            });
        });
    </script>
</body>

</html>
