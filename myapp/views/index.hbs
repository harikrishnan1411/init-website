    <style>
        /* Ensure mobile nav links are styled and visible */
        #mobileNav a {
            color: white;
            /* Make sure text is white */
            text-decoration: none;
            /* Remove underline */
            font-size: 1.25rem;
            /* Adjust font size */
            text-transform: uppercase;
            /* Uppercase text */
            padding: 1rem;
            /* Add padding for spacing */
            width: 50%;
            /* Make links full width */
            text-align: center;
            /* Center text */
            transition: background-color 0.3s ease;
            /* Smooth transition for background */
        }

        #mobileNav a:hover {
            background-color: rgba(255, 255, 255, 0.2);
            /* Light background on hover */
        }

        /* Ensure hamburger button is properly styled */
        #hamburger {
            z-index: 60;
        }

        /* Ensure mobile nav is hidden off-screen by default */
        #mobileNav {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
            top: 0;
            /* Ensure it is aligned with the top */
            left: 0;
            /* Align with the left side */
        }

        /* Mobile Nav active state */
        #mobileNav.active {
            transform: translateX(0);
        }

        nav.scrolled {
            background-color: rgba(0, 0, 0, 0.8);
            transition: background-color 0.3s ease;
        }

        @media (min-width: 1024px) {
            #navItems {
                display: flex !important;
            }

            #hamburger,
            #mobileNav {
                display: none !important;
            }
        }

        /* Add scroll animations */
        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Additional styling for aesthetic appearance */
        body {
            font-family: 'Poppins', sans-serif;
        }

        nav a,
        h1,
        h2,
        h3,
        p,
        button {
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        nav a:hover,
        button:hover {
            transform: scale(1.05);
        }

        h1 {
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
        }

        h2 {
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
        }

        .bg-gradient-to-r {
            background-size: 200% 200%;
            animation: gradientBG 6s ease infinite;
        }

        @keyframes gradientBG {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }
    </style>
</head>

