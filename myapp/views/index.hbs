<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Init-IT Association</title>
    <style>
        /* Ensure mobile nav links are styled and visible */
        #mobileNav a {
            color: white; /* Make sure text is white */
            text-decoration: none; /* Remove underline */
            font-size: 1.25rem; /* Adjust font size */
            text-transform: uppercase; /* Uppercase text */
            padding: 1rem; /* Add padding for spacing */
            width: 50%; /* Make links full width */
            text-align: center; /* Center text */
            transition: background-color 0.3s ease; /* Smooth transition for background */
        }
        #mobileNav a:hover {
            background-color: rgba(255, 255, 255, 0.2); /* Light background on hover */
        }
        /* Ensure hamburger button is properly styled */
        #hamburger {
            z-index: 60;
        }
        /* Ensure mobile nav is hidden off-screen by default */
        #mobileNav {
            transform: translateX(-100%);
            transition: transform 0.3s ease;
            top: 0;
            /* Ensure it is aligned with the top */
            left: 0;
            /* Align with the left side */
        }

        /* Mobile Nav active state */
        #mobileNav.active {
            transform: translateX(0);
        }
         nav.scrolled {
            background-color: rgba(0, 0, 0, 0.8);
            transition: background-color 0.3s ease;
        }
    </style>
</head>
<body>
    <nav class="w-screen bg-transparent h-fit overflow-hidden fixed top-0 left-0 z-50">
        <div class="py-4 lg:px-8 px-4 max-w-[1280px] h-16 m-auto text-white flex items-center justify-between">
            <div class="lg:w-1/2">
                <a href="/" class="lg:text-2xl text-xl uppercase tracking-wider cursor-pointer font-bold">Init()</a href="/">
            </div>
            <div class="hidden lg:flex lg:gap-8 gap-6 uppercase tracking-wider cursor-pointer text-lg items-center lg:w-1/2 justify-end" id="navItems">
                <a href="/events" class="group">
                    EVENTS
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
                <a href="/members" class="group">
                    MEMBERS
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
                <a href="/contactus" class="group">
                    CONTACT
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
                <a href="/about" class="group">
                    ABOUT US
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
            </div>
            <button id="hamburger" class="lg:hidden text-white text-2xl focus:outline-none">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <div id="mobileNav" class="fixed inset-0 top-16 left-[-100%] w-[75%] bg-gray-800 text-white flex flex-col items-center gap-6 pt-16 px-4 transition-transform duration-300 ease-in-out">
            <button class="self-end text-2xl" id="closeMobileNav">
                <i class="fas fa-times"></i>
            </button>
            <a href="/events">EVENTS</a>
            <a href="/members">MEMBERS</a>
            <a href="/contactus">CONTACT</a>
            <a href="/about">ABOUT US</a>
        </div>
    </nav>
    <section class="bg-gray-900 text-white">
        <div class="relative h-screen bg-cover bg-center" style="background-image: url('https://wallpapers.com/images/hd/abstract-colorful-wispy-smoke-bfhit23ddy0e6bed.jpg');">
            <div class="absolute inset-0 bg-black opacity-50"></div>
            <div class="relative z-10 flex items-center justify-center h-full px-4 py-32 lg:px-8">
                <div class="text-center">
                    <h1 class="bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 bg-clip-text text-3xl font-extrabold text-transparent sm:text-5xl">
                        Init()
                        <span class="sm:block">IT Association</span>
                    </h1>
                    <p class="mx-auto mt-4 max-w-xl sm:text-xl">
                        Empowering IT professionals and enthusiasts through knowledge sharing, events, and networking.
                    </p>
                    <div class="mt-8 flex flex-wrap justify-center gap-4">
                        <a class="block w-full rounded border border-blue-600 bg-blue-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring active:text-opacity-75 sm:w-auto" href="#">
                            Get Started
                        </a>
                        <a class="block w-full rounded border border-blue-600 px-12 py-3 text-sm font-medium text-white hover:bg-blue-600 focus:outline-none focus:ring active:bg-blue-500 sm:w-auto" href="#">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        // JavaScript for toggling mobile navigation
        const hamburger = document.getElementById('hamburger');
        const mobileNav = document.getElementById('mobileNav');
        const closeMobileNav = document.getElementById('closeMobileNav');

        hamburger.addEventListener('click', () => {
            mobileNav.style.transform = 'translateX(0)';
        });

        closeMobileNav.addEventListener('click', () => {
            mobileNav.style.transform = 'translateX(-100%)';
        });
    </script>
</body>
</html>
