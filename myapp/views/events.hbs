            <a href="/members">MEMBERS</a>
            <a href="/contactus">CONTACT</a>
            <a href="/about">ABOUT US</a>
        </div>

    </nav>
    <div class="area"></div>
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <div class="events-container">
        <!-- Upcoming Events Section -->

        <div id="upcomingEvents" class="event-section">
            <h2 class="section-title">Upcoming Events</h2>
            <div class="event-grid fade-in">
                {{#each events}}
                {{#unless this.completed}} <!-- Show only upcoming events -->
                <div class="card animate__animated animate__fadeInUp fade-in">
                    <div style="background-image: url('/image/{{this._id}}');" alt="Project Cover" class="card-image">
                    </div>
                    <div class="card-content">
                        <h2 class="card-title animate__animated animate__fadeInDown">{{this.title}}</h2>
                        <p class="card-description animate__animated animate__fadeIn">{{this.description}}</p>
                        <a href="/events/{{this._id}}" class="card-link">
                            View Details
                        </a>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <!-- Completed Events Section -->
        <div id="completedEvents" class="event-section">
            <h2 class="section-title">Completed Events</h2>
            <div class="event-grid">
                {{#each events}}
                {{#if this.completed}} <!-- Show only completed events -->
                <div class="card animate__animated animate__fadeInUp completed-event fade-in">
                    <div style="background-image: url('/image/{{this._id}}');" alt="Project Cover" class="card-image">
                    </div>
                    <div class="card-content">
                        <h2 class="card-title animate__animated animate__fadeInDown">{{this.title}}</h2>
                        <p class="card-description animate__animated animate__fadeIn">{{this.description}}</p>
                        <a href="/events/{{this._id}}" class="card-link">
                            View Details
                        </a>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    </div>


    <script>

        window.addEventListener('load', () => {
            // Keep the spinner visible for 2 seconds after the page has loaded

            document.getElementById('spinner').style.display = 'none';

            const fadeElements = document.querySelectorAll('.fade-in');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('show');
                    }
                });
            }, {
                threshold: 0.5
            });

            fadeElements.forEach((el) => {
                observer.observe(el);
            });

        });



        // Navbar background change on scroll
        const navbar = document.querySelector('nav');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Handle hamburger menu toggle
        const hamburger = document.getElementById('hamburger');
        const mobileNav = document.getElementById('mobileNav');
        const closeMobileNav = document.getElementById('closeMobileNav');

        hamburger.addEventListener('click', () => {
            mobileNav.classList.add('show');  // Show the menu
        });

        closeMobileNav.addEventListener('click', () => {
            mobileNav.classList.remove('show');  // Hide the menu
        });




        // Fade-in effect for event containers

    </script>
