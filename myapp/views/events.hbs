<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Kode+Mono:wght@400..700&display=swap"
        rel="stylesheet">
    <title>Events - init() IT Association</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Roboto+Slab:wght@400;700&display=swap');

        /* General styling */
         html {
            color-scheme: dark;
            /* or use 'dark' if you want your website to always be dark themed */
        }
        nav {
            font-family: "Kode Mono", monospace;
            font-optical-sizing: auto;
            font-weight: <weight>;
            font-style: normal;
        }
        body {
            
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* Navbar scroll effect */
        nav.scrolled {
            background-color: rgba(0, 0, 0, 0.8);
            transition: background-color 0.3s ease;
        }

        /* Container for events */
        .events-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            margin-top: 70px;
        }

        /* Event section container */
        .event-section {
            width: 100%;
        }

        /* Event section title */
        .section-title {
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            color: white;
            text-align: center;
            margin-bottom: 20px;
            text-transform: uppercase;
        }

        .event-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            width: 100%;
        }

        /* Individual event container */
        .container {
            background-color: rgba(17, 25, 40, 0.75);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.125);
            padding: 20px;
            width: 300px;
            filter: drop-shadow(0 30px 10px rgba(0, 0, 0, 0.125));
            text-align: center;
            box-sizing: border-box;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        /* Ensure the event cards appear centered on all screen sizes */
        .event-grid>.container {
            margin: 0 auto;
        }

        /* Event title */
        h1 {
            font-family: 'Poppins', sans-serif;
            color: rgba(255, 255, 255, 0.98);
            text-transform: uppercase;
            font-size: 1.8rem;
            margin-top: 15px;
        }

        /* Event description */
        p {
            color: #fff;
            font-family: 'Poppins', sans-serif;
            text-align: center;
            font-size: 0.9rem;
            line-height: 150%;
            letter-spacing: 1.5px;
            margin-top: 10px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        /* Completed event specific styling */
        .completed-event .banner-image {
            filter: blur(4px);
        }

        /* Show state for fade-in */
        .show {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive banner image */
        .banner-image {
            background-position: center;
            background-size: cover;
            height: 200px;
            width: 100%;
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.255);
        }

        /* Buttons */
        .button-wrapper {
            margin-top: 20px;
        }

        .btn {
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 0.8rem;
            letter-spacing: 1.5px;
            cursor: pointer;
            text-transform: uppercase;
        }

        .btn.outline {
            background: transparent;
            color: rgba(0, 212, 255, 0.9);
            border: 1px solid rgba(0, 212, 255, 0.6);
            transition: all .3s ease;
        }

        .btn.outline:hover {
            transform: scale(1.125);
            color: rgba(255, 255, 255, 0.9);
            border-color: rgba(255, 255, 255, 0.9);
            transition: all .3s ease;
        }

        /* Mobile Navigation Styles */
        /* Initial hidden state for mobileNav */
        #mobileNav {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            display: none;
            /* Start hidden */
            flex-direction: column;
            align-items: center;

            transition: transform 0.3s ease-in-out;
            z-index: 9999;
            /* Ensure it's on top */
            overflow: hidden;
            /* Prevent content from overflowing */
        }

        /* Show state for mobileNav */
        #mobileNav.show {
            display: flex;
            /* Show the menu */
        }

        #mobileNav a {
            margin-top: 7vh;
            font-size: 1.5rem;
            /* Adjust font size */

            /* Space between links */
            color: white;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        #mobileNav a:hover {
            color: rgba(0, 212, 255, 0.9);
            /* Change color on hover */
        }

        #closeMobileNav {
            position: absolute;
            top: 20px;
            /* Adjust as needed */
            right: 20px;
            /* Adjust as needed */
            font-size: 2rem;
            /* Adjust size */
            cursor: pointer;
            background: none;
            border: none;
            color: white;
        }
    </style>
</head>

<body class="bg-gray-900">

    <nav class="w-full bg-transparent h-fit overflow-hidden fixed top-0 left-0 z-50">
        <div class="py-4 lg:px-8 px-4 max-w-[4120px] h-16 mx-auto text-white flex items-center justify-between">
            <div class="lg:w-1/2">
                <a href="/" class="lg:text-2xl text-xl uppercase tracking-wider cursor-pointer font-bold">
                    <img src="/images/logo.jpg" alt="Company Logo" class="h-12 object-contain">
                </a>
            </div>

            <div class="hidden lg:flex lg:items-center lg:justify-end lg:flex-1 lg:gap-8 uppercase tracking-wider cursor-pointer text-lg"
                id="navItems">
                <a href="/events" class="group">
                    EVENTS
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
                <a href="/members" class="group">
                    MEMBERS
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
                <a href="/contactus" class="group">
                    CONTACT
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
                <a href="/about" class="group">
                    ABOUT US
                    <div class="w-0 group-hover:w-full h-0.5 bg-white ease-in-out duration-500"></div>
                </a>
            </div>
            <button id="hamburger" class="lg:hidden text-white text-2xl focus:outline-none">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <div id="mobileNav">
            <button id="closeMobileNav">
                <i class="fas fa-times"></i>
            </button>
            <a href="/events">EVENTS</a>
            <a href="/members">MEMBERS</a>
            <a href="/contactus">CONTACT</a>
            <a href="/about">ABOUT US</a>
        </div>

    </nav>

    <div class="events-container">
        <!-- Upcoming Events Section -->
        <div id="upcomingEvents" class="event-section">
            <h2 class="section-title">Upcoming Events</h2>
            <div class="event-grid">
                {{#each events}}
                {{#unless this.completed}} <!-- Show only upcoming events -->
                <div class="container fade-in">
                    <div class="wrapper">
                        <div class="banner-image" style="background-image: url('/image/{{this._id}}');"> </div>
                        <h1>{{this.title}}</h1>
                        <p>{{this.description}}</p>
                    </div>
                    <div class="button-wrapper">
                        <a href="/events/{{this._id}}" class="btn outline">DETAILS</a>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <!-- Completed Events Section -->
        <div id="completedEvents" class="event-section">
            <h2 class="section-title">Completed Events</h2>
            <div class="event-grid">
                {{#each events}}
                {{#if this.completed}} <!-- Show only completed events -->
                <div class="container completed-event fade-in">
                    <div class="wrapper">
                        <div class="banner-image" style="background-image: url('/image/{{this._id}}');"> </div>
                        <h1>{{this.title}}</h1>
                        <p>{{this.description}}</p>
                    </div>
                    <div class="button-wrapper">
                        <a href="/events/{{this._id}}" class="btn outline">DETAILS</a>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    <script>
        // Navbar background change on scroll
        const navbar = document.querySelector('nav');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Handle hamburger menu toggle
        const hamburger = document.getElementById('hamburger');
        const mobileNav = document.getElementById('mobileNav');
        const closeMobileNav = document.getElementById('closeMobileNav');

        hamburger.addEventListener('click', () => {
            mobileNav.classList.add('show');  // Show the menu
        });

        closeMobileNav.addEventListener('click', () => {
            mobileNav.classList.remove('show');  // Hide the menu
        });




        // Fade-in effect for event containers
        const fadeElements = document.querySelectorAll('.fade-in');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('show');
                }
            });
        }, {
            threshold: 0.1
        });

        fadeElements.forEach((el) => {
            observer.observe(el);
        });
    </script>
</body>

</html>